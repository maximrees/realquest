<selector xmlns:android="http://schemas.android.com/apk/res/android">
    <item android:state_checked="true" android:state_window_focused="false"
          android:state_enabled="true"
          android:drawable="@drawable/btn_radio_on_realquest" />
    <item android:state_checked="false" android:state_window_focused="false"
          android:state_enabled="true"
          android:drawable="@drawable/btn_radio_off_realquest" />
          
    <item android:state_checked="true" android:state_pressed="true"
          android:state_enabled="true"
          android:drawable="@drawable/btn_radio_on_pressed_realquest" />
    <item android:state_checked="false" android:state_pressed="true"
          android:state_enabled="true"
          android:drawable="@drawable/btn_radio_off_pressed_realquest" />

    <item android:state_checked="true" android:state_focused="true"
          android:state_enabled="true"
          android:drawable="@drawable/btn_radio_on_focused_realquest" />
    <item android:state_checked="false" android:state_focused="true"
          android:state_enabled="true"
          android:drawable="@drawable/btn_radio_off_focused_realquest" />

    <item android:state_checked="false" android:state_enabled="true"
          android:drawable="@drawable/btn_radio_off_realquest" />
    <item android:state_checked="true" android:state_enabled="true"
          android:drawable="@drawable/btn_radio_on_realquest" />

    <!-- Disabled states -->

    <item android:state_checked="true" android:state_window_focused="false"
          android:drawable="@drawable/btn_radio_on_disabled_realquest" />
    <item android:state_checked="false" android:state_window_focused="false"
          android:drawable="@drawable/btn_radio_off_disabled_realquest" />

    <item android:state_checked="true" android:state_focused="true"
          android:drawable="@drawable/btn_radio_on_disabled_focused_realquest" />
    <item android:state_checked="false" android:state_focused="true"
          android:drawable="@drawable/btn_radio_off_disabled_focused_realquest" />

    <item android:state_checked="false" android:drawable="@drawable/btn_radio_off_disabled_realquest" />
    <item android:state_checked="true" android:drawable="@drawable/btn_radio_on_disabled_realquest" />

</selector>