<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:orientation="vertical" >

    <ImageView
        android:id="@+id/imageView1"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_gravity="center"
        android:src="@drawable/realquest_logo"
        android:layout_marginTop="@dimen/padding_large"
        android:layout_marginBottom="@dimen/padding_extra_large" />

    <Button
        android:id="@+id/startContinue"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_gravity="center"
        android:layout_marginBottom="@dimen/padding_small"
        android:layout_marginTop="@dimen/padding_large"
        android:text="@string/button_startcontinue"
        android:onClick="startQuest"
        android:minHeight="44dip"
        android:minWidth="230dip" />
    
    <Button
        android:id="@+id/scores"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_gravity="center"
        android:layout_marginBottom="@dimen/padding_small"
        android:text="@string/button_scores"
        android:onClick="startScores"
        android:minHeight="44dip"
        android:minWidth="230dip" />

    <Button
        android:id="@+id/settings"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_gravity="center"
        android:layout_marginBottom="@dimen/padding_small"
        android:text="@string/button_settings"
        android:onClick="startSettings"
        android:minHeight="44dip"
        android:minWidth="230dip" />

    <Button
        android:id="@+id/credits"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_gravity="center"
        android:layout_marginBottom="@dimen/padding_small"
        android:text="@string/button_credits" 
        android:onClick="startCredits"
        android:minHeight="44dip"
        android:minWidth="230dip" />

    <Button
        android:id="@+id/quit"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_gravity="center"
        android:layout_marginBottom="@dimen/padding_small"
        android:text="@string/button_quit" 
        android:onClick="quitMain"
        android:minHeight="44dip"
        android:minWidth="230dip" />

</LinearLayout>
